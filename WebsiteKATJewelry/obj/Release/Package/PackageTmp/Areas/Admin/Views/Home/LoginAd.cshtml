@model WebsiteKATJewelry.Models.User
@{
	Layout = null;
}


<!doctype html>
<html lang="vi">
<head>
	<title>Login KAT</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/LayoutLoginAd/css/style.css">

</head>
<body class="img js-fullheight" style=" background-image: url('../../../../LayoutLoginAd/images/bg.jpg'); ">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					@if (TempData["SuccessMessage"] != null)
					{
						<div class="alert alert-success separator hidden-lg" id="success-alert">
							<span><b>Success - </b>@TempData["SuccessMessage"]</span>
						</div>
					}
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<h3 class="mb-4 text-center">Xin chào Admin!</h3>
						@using (Html.BeginForm("LoginAd", "Home", FormMethod.Post, new { @class = "signin-form" }))
						{
							@Html.AntiForgeryToken()
							
							if (Request.Cookies["email"] != null && Request.Cookies["Password"] != null)
							{

								<div class="form-group" data-validate="Email is required">
									@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Nhập email", @name = "email", @Request.Cookies["email"].Value })
								</div>
								<div class="form-group" data-validate="Password is required">
									@Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password-field", @placeholder = "Nhập password", @name = "pass", @Request.Cookies["Password"].Value })
									<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
								</div>
							}
							else
							{
								<div class="form-group" data-validate="Email is required">
									@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Nhập email", @name = "email" })
								</div>

								<div class="form-group" data-validate="Password is required">
									@Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password-field", @placeholder = "Nhập mật khẩu", @name = "Password" })
									<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
								</div>
							}

							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
							</div>
							<div class="form-group d-md-flex">
								<div class="w-50">
									<label class="checkbox-wrap checkbox-primary">
										Remember Me
										<input type="checkbox" checked>
										<span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="@Url.Action("ForgotPassAd", "Home")" style="color: #fff">Quên mật khẩu</a>
								</div>
							</div>
						}
						<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
						<div class="social d-flex text-center">
							<a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
							<a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/LayoutLoginAd/js/jquery.min.js"></script>
	<script src="~/LayoutLoginAd/js/popper.js"></script>
	<script src="~/LayoutLoginAd/js/bootstrap.min.js"></script>
	<script src="~/LayoutLoginAd/js/main.js"></script>

</body>
</html>

