@model WebsiteKATJewelry.Areas.Admin.Models.Bill

@{ ViewBag.Title = "Edit";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Bill", FormMethod.Post, new
{
	enctype = "multipart/form-data"
}))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	<div class="form-group">
		<label class="control-label col-md-3">Mã hóa đơn:</label>
		<div class="col-md-10">
			<input type="text" size="70" name="iMaHD" value="@Model.DonHang.MaHD" readonly />
		</div>
	</div>

	<div class="form-group">
		@if (Model.DonHang.TinhTrangDonHang != 1)
		{
			<label class="control-label col-md-3">Trạng thái:</label>
			<div class="col-md-10">
				@Html.DropDownList("Trangthai", (SelectList)ViewBag.TrangThaiList, new { @class = "form-control", @id = "Trangthai"})
			</div>
		}
	</div>
	<div class="form-group">
			@if (Model.DonHang.DaThanhToan == false)
			{<label class="control-label col-md-3">Thanh toán:</label>
				<div class="col-md-10">
					@Html.DropDownList("ThanhToan", (SelectList)ViewBag.ThanhToanList, new { @class = "form-control", @id = "ThanhToan" })
				</div>
			}
	</div>
	

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Save" class="btn btn-default" />
		</div>
	</div>
</div>}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>
