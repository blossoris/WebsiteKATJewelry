@model IEnumerable<WebsiteKATJewelry.Models.DanhMuc>
<div class="search-popup">
	<div class="search-popup-container">

		@using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "search-form" }))
		{
			<input type="search" id="search-form" class="search-field" placeholder="Type and press enter" value="@ViewBag.Keyword" name="searchString" />

			<button type="submit" class="search-submit"><a href="#"><i class="icon icon-search"></i></a></button>

		}

		<h5 class="cat-list-title">Duyệt danh mục</h5>

		<ul class="cat-list">
			@foreach (var item in Model)
			{
				<li class="cat-list-item"><a href="@Url.Action("ProductByCategory","Product", new { categoryID = item.MaDM})" title="@item.TenDM" class="item-anchor">@item.TenDM</a></li>
			}
		</ul>
	</div>
</div>
<header id="header">
	<div id="header-wrap">
		<nav class="secondary-nav border-bottom">
			<div class="container">
				<div class="row d-flex align-items-center">
					<div class="col-md-4 header-contact">
						<div class="main-logo padding-xsmall">
							<a href="@Url.Action("Index","KAT")">
								<img src="~/Images/logo.png" alt="logo" style="width:100px;">
							</a>
						</div>
					</div>
					<div class="col-md-4 shipping-purchase text-center">
						<p style="font-size:15px">Miễn phí vận chuyển với hóa đơn từ 200.000đ!!!</p>
					</div>
					<div class="col-md-4 col-sm-12 user-items">
						<ul class="d-flex justify-content-end list-unstyled">

							<li class="dropdown">
								@if (Session["email"] != null)
								{

								<a href="@Url.Action("MyAccount", "Account")" class="dropbtn"><i class="icon icon-user"></i></a>
								}
								else
								{
									<a href="@Url.Action("Login", "Account")" class="dropbtn"><i class="icon icon-user"></i></a>
								}

							</li>
							<li>
								<a href="cart.html">
									<a href="@Url.Action("GioHang","Cart")"><i class="icon icon-shopping-cart"></i>@Html.Action("GioHangPartial", "Cart")</a>
								</a>
							</li>
							<li>
								<a href="#">
									<i class="icon icon-heart"></i>
								</a>
							</li>
							<li class="user-items search-item pe-3">
								<a href="#" class="search-button">
									<i class="icon icon-search"></i>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>
		<nav class="navbar-static-top primary-nav">
			<div class="container">
				<div class="row d-flex align-items-center">
					<div class="navbar">

						<div id="main-nav" class="stellarnav d-flex justify-content-end right">
							<ul class="menu-list" style="font-size:17px">

								<li>
									<a href="@Url.Action("Index","KAT")" class="item-anchor active " data-effect="Home">TRANG CHỦ</a>
								</li>

								<li class="menu-item has-sub">
									<a href="@Url.Action("Index","Product")" class="item-anchor d-flex align-item-center" data-effect="Shop">TRANG SỨC<i class="icon icon-chevron-down"></i></a>
									<ul class="submenb list-group">
										@foreach (var item in Model)
										{
											<li><a href="@Url.Action("ProductByCategory","Product", new { categoryID = item.MaDM})" class="item-anchor">@item.TenDM</a></li>
										}

									</ul>

								</li>


								<li><a href="@Url.Action("Instagram", "KAT")" class="item-anchor" data-effect="About">INSTAGRAM</a></li>

								

								<li class="menu-item has-sub">
									<a href="blog.html" class="item-anchor d-flex align-item-center" data-effect="Blog">KAT JEWELRY<i class="icon icon-chevron-down"></i></a>
									<ul class="submenu">
										<li><a href="#" class="item-anchor">Về chúng tôi</a></li>
										<li><a href="#" class="item-anchor">Chính sách bảo mật</a></li>
									</ul>
								</li>

								<li><a href="@Url.Action("LienHe", "KAT")" class="item-anchor" data-effect="Contact">LIÊN HỆ</a></li>

							</ul>
						</div>
					</div>
				</div>
			</div>
		</nav>
	</div>
</header>
<style>
	.dropdown {
		position: relative;
		display: inline-block;
	}

	/* Style for the dropdown button (the user icon) */
	.dropbtn {
		color: #fff;
		border: none;
		cursor: pointer;
	}

	/* Style for the dropdown content */
	.dropdown-content {
		display: none;
		position: absolute;
		z-index: 1;
		background-color:white;
		color: black;
	}

		/* Style for the dropdown links */
		.dropdown-content a {
			color: black;
			display: block;
		}

			/* Optional: Hover effect for the dropdown links */
			.dropdown-content a:hover {
				color: darkcyan;			
			}

	/* Show the dropdown content when hovering over the dropdown button */
	.dropdown:hover .dropdown-content {
		display: block;
	}
</style>